{
  "name": "internote",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \".build\" -exec rm -rf '{}' + && yarn cache clean",
    "format": "prettier --write \"./**/*.{ts,tsx,js}\""
  },
  "license": "ISC",
  "workspaces": {
    "packages": [
      "api",
      "ui",
      "services/*"
    ],
    "nohoist": [
      "**/serverless",
      "**/serverless/**"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4"
  }
}
