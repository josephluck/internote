{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "es2017", "webworker"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["../**/*", "**/*"],
  "exclude": [
    "node_modules",
    "static",
    ".next",
    ".storybook",
    ".awcache",
    "public",
    "monaco-editor",
    "node_modules/monaco-editor",
    "node_modules/react-monaco-editor",
    "storybook-static"
  ]
}
